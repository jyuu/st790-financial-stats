\usecolortheme{wolfstatJL}

\setbeamercolor{NCSU logo}{fg=white,bg=wolfred}
\setbeamercolor{NCSU rule}{fg=wolfred,bg=wolfred}
\setbeamercolor{NCSU footer}{fg = black, bg = white}
%\setbeamercolor{NCSU header}{fg=white,bg=red!25!white}
\setbeamercolor{NCSU header}{fg=white, bg = black}
\setbeamerfont{details in NCSU foot}{size=\Tiny}
\setbeamerfont{page number in NCSU foot}{size=\tiny}

\newcommand{\footlineupper}[1]{\def\@footlineupper{#1}}
\def\@footlineupper{}
\newcommand{\footlinelower}[1]{\def\@footlinelower{#1}}
\def\@footlinelower{}

\defbeamertemplate*{footline}{NCSU theme}
{
  \leavevmode%
  \begin{beamercolorbox}[wd=\paperwidth,ht=1pt]{NCSU rule}%
    \hrulefill%
  \end{beamercolorbox}\par%
  \hbox{%
    \begin{beamercolorbox}[wd=.4\paperwidth,ht=3.5ex,dp=1.15ex,center]{NCSU logo}%
      \pgfdeclareimage[height=4.9ex]{ncsu-logo}{ncsu-red}%{125mobilesite-whiteonred-300-52}%
      \raisebox{-1.15ex}{\pgfuseimage{ncsu-logo}}%
    \end{beamercolorbox}%
    \begin{beamercolorbox}[wd=.2\paperwidth,ht=3.5ex,dp=1.15ex,center]{NCSU footer}%
      \usebeamerfont{page number in NCSU foot}\insertframenumber{} / \inserttotalframenumber%
    \end{beamercolorbox}%
    \begin{beamercolorbox}[wd=.4\paperwidth,ht=3.5ex,dp=1.15ex,vmode]{NCSU footer}%
       \begin{beamercolorbox}[wd=.4\paperwidth,ht=1.5ex,dp=0.5ex,right]{NCSU footer}%
         \usebeamerfont{details in NCSU foot}\@footlineupper{}\hspace*{2em}%
       \end{beamercolorbox}%
       \begin{beamercolorbox}[wd=.4\paperwidth,ht=1.5ex,dp=0.5ex,right]{NCSU footer}%
         \usebeamerfont{details in NCSU foot}\@footlinelower{}\hspace*{2em}%
       \end{beamercolorbox}%
    \end{beamercolorbox}}%
  \vskip0pt%
}

\defbeamertemplate*{headline}{NCSU theme}
{
  \leavevmode%
  \hbox{%
  \begin{beamercolorbox}[wd=.5\paperwidth,ht=2.25ex,dp=1ex,right]{section in head/foot}%
    \usebeamerfont{section in head/foot}\insertsectionhead\hspace*{2ex}
  \end{beamercolorbox}%
  \begin{beamercolorbox}[wd=.5\paperwidth,ht=2.25ex,dp=1ex,left]{subsection in head/foot}%
    \usebeamerfont{subsection in head/foot}\hspace*{2ex}\insertsubsectionhead
  \end{beamercolorbox}%
}\par%
  \begin{beamercolorbox}[wd=\paperwidth,ht=1pt]{section in head/foot}%
  \usebeamerfont{author in head/foot}\hrulefill%
  \end{beamercolorbox}%
  \vskip0pt%
}

\setbeamersize{text margin left=1em,text margin right=1em}

\setbeamerfont{block title}{size={}}
