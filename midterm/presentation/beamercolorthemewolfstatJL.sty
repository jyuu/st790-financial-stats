\definecolor{wolfred}{rgb}{.8,0,0}
\definecolor{darkblue}{rgb}{0,0,0.8}

\setbeamercolor{alerted text}{fg=wolfred!80!yellow}
\setbeamercolor*{palette primary}{fg=wolfred,bg=white}
\setbeamercolor*{palette secondary}{fg=wolfred!70!black,bg=white}
%\setbeamercolor*{palette tertiary}{bg=wolfred!25!white,fg=white}
\setbeamercolor*{palette tertiary}{bg=wolfred!80!white,fg=white}
\setbeamercolor*{palette quaternary}{fg=wolfred!25!white,bg=white}

\setbeamercolor*{sidebar}{fg=white,bg=wolfred}

%\setbeamercolor{itemize item}{fg = black} % color of bullet points, but this didn't actually work for some reason
\setbeamercolor*{item}{fg = black}


\setbeamercolor*{palette sidebar primary}{fg=wolfred!10!black}
\setbeamercolor*{palette sidebar secondary}{fg=white}
\setbeamercolor*{palette sidebar tertiary}{fg=wolfred!50!black}
\setbeamercolor*{palette sidebar quaternary}{fg=white}

\setbeamercolor*{titlelike}{parent=palette primary}
\setbeamercolor{frametitle right}{bg=white}
\setbeamercolor{frametitle left}{fg=white,bg=wolfred}

\setbeamercolor*{separation line}{}
\setbeamercolor*{fine separation line}{}

% JL's colors %
\setbeamercolor{title}{fg = black}
